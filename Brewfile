# Homelab Proxmox - Mac Dependencies
# Install with: brew bundle

# Infrastructure tools
brew "terraform"      # VM provisioning
brew "packer"         # VM template building
brew "ansible"        # Configuration management

# Kubernetes tools
brew "kubernetes-cli" # K8s CLI (provides kubectl)
brew "helm"           # K8s package manager
brew "k9s"            # K8s TUI dashboard

# Environment management
brew "direnv"         # Per-directory env vars
