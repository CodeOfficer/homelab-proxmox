<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Genres - Spotify Sync PRO</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-green-600 text-white p-4 shadow-lg">
    <div class="container mx-auto flex flex-wrap items-center justify-between gap-4">
      <a href="/" class="text-2xl font-bold hover:underline">üéµ Spotify Sync PRO</a>
      <div class="flex flex-wrap items-center gap-4 text-sm">
        <a href="/search" class="hover:underline">Search</a>
        <a href="/playlists" class="hover:underline">Playlists</a>
        <a href="/tracks" class="hover:underline">Tracks</a>
        <a href="/artists" class="hover:underline">Artists</a>
        <a href="/genres" class="hover:underline font-semibold">Genres</a>
        <a href="/auth/logout" class="bg-white text-green-600 px-3 py-1.5 rounded hover:bg-gray-100 transition">
          Logout
        </a>
      </div>
    </div>
  </nav>

  <main class="container mx-auto p-8">
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">
            All Genres
            <span class="text-lg font-normal text-gray-500">(<span id="total-count"><%= totalCount %></span> total)</span>
          </h1>
          <p class="text-gray-600 mt-2">Explore your library by genre</p>
        </div>
        <div class="flex flex-wrap gap-3 text-sm">
          <div class="bg-green-50 text-green-700 px-3 py-2 rounded-lg">
            <span class="font-semibold"><%= stats.totalArtists.toLocaleString() %></span> artists
          </div>
          <div class="bg-blue-50 text-blue-700 px-3 py-2 rounded-lg">
            <span class="font-semibold"><%= stats.totalTracks.toLocaleString() %></span> tracks
          </div>
        </div>
      </div>
      <form action="/genres" method="GET" class="mt-4 flex flex-wrap gap-2">
        <input
          id="genre-search"
          type="text"
          name="q"
          value="<%= query || '' %>"
          placeholder="Search genres..."
          class="w-full md:w-96 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
          Search
        </button>
      </form>
    </div>

    <div class="bg-white rounded-lg shadow p-6">
      <% if (genres.length === 0) { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üéº</div>
          <p class="text-gray-600">No genres found</p>
        </div>
      <% } else { %>
        <div id="genre-list" class="flex flex-wrap gap-2">
          <% genres.forEach(function(g) { %>
            <a
              href="/search?q=<%= encodeURIComponent(g.genre) %>&filter=genre"
              class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1.5 rounded-full text-sm font-medium transition"
              title="<%= g.count %> artists"
            >
              <%= g.genre %> (<%= g.count %>)
            </a>
          <% }); %>
        </div>

        <% if (totalPages > 1) { %>
          <div id="genre-pagination" class="flex justify-center gap-2 mt-6">
            <% if (page > 1) { %>
              <a href="/genres?page=<%= page - 1 %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">
                ‚Üê Previous
              </a>
            <% } %>

            <%
              const maxPageButtons = 10;
              const startPage = Math.max(1, page - Math.floor(maxPageButtons / 2));
              const endPage = Math.min(totalPages, startPage + maxPageButtons - 1);
            %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <a
                href="/genres?page=<%= i %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>"
                class="px-4 py-2 <%= i === page ? 'bg-blue-600 text-white' : 'bg-gray-200' %> rounded hover:bg-gray-300 transition"
              >
                <%= i %>
              </a>
            <% } %>

            <% if (endPage < totalPages) { %>
              <span class="px-4 py-2 text-gray-500">...</span>
              <a
                href="/genres?page=<%= totalPages %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>"
                class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition"
              >
                <%= totalPages %>
              </a>
            <% } %>

            <% if (page < totalPages) { %>
              <a href="/genres?page=<%= page + 1 %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">
                Next ‚Üí
              </a>
            <% } %>
          </div>

          <p id="genre-page-label" class="text-center text-sm text-gray-500 mt-4">
            Page <%= page %> of <%= totalPages %> ¬∑ Showing <%= genres.length %> of <%= totalCount %> genres
          </p>
        <% } %>
      <% } %>
    </div>
  </main>

  <footer class="text-center text-gray-500 text-sm p-4 mt-8">
    <p>Spotify Sync PRO | <a href="/" class="text-blue-500 hover:underline">Dashboard</a></p>
  </footer>

  <script>
    const genreSearch = document.getElementById('genre-search');
    const genreList = document.getElementById('genre-list');
    const genrePagination = document.getElementById('genre-pagination');
    const genrePageLabel = document.getElementById('genre-page-label');
    const genreTotal = document.getElementById('total-count');
    let genreTimer = null;

    function renderGenreChip(genre) {
      return `
        <a href="/search?q=${encodeURIComponent(genre.genre)}&filter=genre"
           class="bg-gray-100 hover:bg-gray-200 text-gray-800 px-3 py-1.5 rounded-full text-sm font-medium transition"
           title="${genre.count} artists">
          ${genre.genre} (${genre.count})
        </a>
      `;
    }

    async function loadGenres(query, page = 1) {
      const response = await fetch(`/api/genres?q=${encodeURIComponent(query)}&page=${page}`);
      const data = await response.json();
      if (genreTotal) genreTotal.textContent = data.totalCount;
      if (genreList) {
        genreList.innerHTML = data.items.map(renderGenreChip).join('');
      }
      if (!genrePagination || !genrePageLabel) return;

      if (data.totalPages > 1) {
        const links = [];
        if (data.page > 1) {
          links.push(`<a href="#" data-page="${data.page - 1}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">‚Üê Previous</a>`);
        }
        const maxButtons = 10;
        const startPage = Math.max(1, data.page - Math.floor(maxButtons / 2));
        const endPage = Math.min(data.totalPages, startPage + maxButtons - 1);
        for (let i = startPage; i <= endPage; i++) {
          const cls = i === data.page ? 'bg-blue-600 text-white' : 'bg-gray-200';
          links.push(`<a href="#" data-page="${i}" class="px-4 py-2 ${cls} rounded hover:bg-gray-300 transition">${i}</a>`);
        }
        if (endPage < data.totalPages) {
          links.push(`<span class="px-4 py-2 text-gray-500">...</span>`);
          links.push(`<a href="#" data-page="${data.totalPages}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">${data.totalPages}</a>`);
        }
        if (data.page < data.totalPages) {
          links.push(`<a href="#" data-page="${data.page + 1}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">Next ‚Üí</a>`);
        }
        genrePagination.innerHTML = links.join('');
        genrePageLabel.textContent = `Page ${data.page} of ${data.totalPages} ¬∑ Showing ${data.items.length} of ${data.totalCount} genres`;
        genrePagination.querySelectorAll('a[data-page]').forEach((link) => {
          link.addEventListener('click', (event) => {
            event.preventDefault();
            loadGenres(genreSearch.value, Number(link.dataset.page));
          });
        });
      } else {
        genrePagination.innerHTML = '';
        genrePageLabel.textContent = '';
      }
    }

    if (genreSearch) {
      genreSearch.addEventListener('input', () => {
        clearTimeout(genreTimer);
        genreTimer = setTimeout(() => loadGenres(genreSearch.value, 1), 300);
      });
    }
  </script>
</body>
</html>
