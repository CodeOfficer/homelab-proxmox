<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= album.name %> - Spotify Sync PRO</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-green-600 text-white p-4 shadow-lg">
    <div class="container mx-auto flex flex-wrap items-center justify-between gap-4">
      <a href="/" class="text-2xl font-bold hover:underline">üéµ Spotify Sync PRO</a>
      <div class="flex flex-wrap items-center gap-4 text-sm">
        <a href="/search" class="hover:underline">Search</a>
        <a href="/playlists" class="hover:underline">Playlists</a>
        <a href="/tracks" class="hover:underline">Tracks</a>
        <a href="/artists" class="hover:underline">Artists</a>
        <a href="/genres" class="hover:underline">Genres</a>
        <a href="/auth/logout" class="bg-white text-green-600 px-3 py-1.5 rounded hover:bg-gray-100 transition">
          Logout
        </a>
      </div>
    </div>
  </nav>

  <main class="container mx-auto p-8">
    <!-- Album Header -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="flex flex-col md:flex-row gap-6">
        <div class="flex-shrink-0">
          <% if (album.image_url) { %>
            <img src="<%= album.image_url %>" alt="<%= album.name %>" class="w-56 h-56 object-cover rounded-lg shadow-md">
          <% } else { %>
            <%
              const palette = ['bg-emerald-200 text-emerald-900','bg-amber-200 text-amber-900','bg-sky-200 text-sky-900','bg-rose-200 text-rose-900','bg-indigo-200 text-indigo-900','bg-lime-200 text-lime-900'];
              const base = album.name || 'Album';
              const initials = base.split(' ').filter(Boolean).slice(0, 2).map(word => word[0]).join('').toUpperCase();
              const color = palette[(base.charCodeAt(0) || 0) % palette.length];
            %>
            <div class="w-56 h-56 rounded-lg flex items-center justify-center text-5xl font-semibold <%= color %>">
              <%= initials || 'AL' %>
            </div>
          <% } %>
        </div>

        <div class="flex-1">
          <h1 class="text-3xl font-bold text-gray-800 mb-2"><%= album.name %></h1>
          <% if (artists && artists.length > 0) { %>
            <p class="text-gray-600 mb-4">
              <% artists.forEach(function(artist, index) { %>
                <a href="/artist/<%= artist.id %>" class="text-blue-600 hover:underline"><%= artist.name %></a><% if (index < artists.length - 1) { %>, <% } %>
              <% }); %>
            </p>
          <% } %>

          <div class="flex flex-wrap gap-4 text-sm text-gray-600">
            <% if (album.album_type) { %>
              <div><span class="font-semibold">Type:</span> <%= album.album_type %></div>
            <% } %>
            <% if (album.release_date) { %>
              <div><span class="font-semibold">Release:</span> <%= album.release_date %></div>
            <% } %>
            <div><span class="font-semibold">Tracks:</span> <%= totalTracks %></div>
          </div>

          <div class="mt-4">
            <% if (album.external_url) { %>
              <a href="<%= album.external_url %>" target="_blank" rel="noopener" class="inline-flex items-center gap-2 text-green-700 hover:text-green-800 font-semibold">
                Open in Spotify ‚Üó
              </a>
              <span class="text-gray-300 mx-2">‚Ä¢</span>
            <% } %>
            <button onclick="history.back()" class="text-blue-600 hover:underline">‚Üê Back</button>
          </div>
        </div>
      </div>
    </div>

    <!-- Tracks -->
    <div class="bg-white rounded-lg shadow p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Tracks</h2>
      <% if (tracks.length === 0) { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üéµ</div>
          <p class="text-gray-600">No tracks found for this album</p>
        </div>
      <% } else { %>
        <div class="overflow-x-auto">
          <table class="w-full">
            <thead>
              <tr class="border-b-2 border-gray-200 text-left">
                <th class="py-3 px-4 text-sm font-semibold text-gray-700">#</th>
                <th class="py-3 px-4 text-sm font-semibold text-gray-700">Title</th>
                <th class="py-3 px-4 text-sm font-semibold text-gray-700 hidden md:table-cell">Artist</th>
                <th class="py-3 px-4 text-sm font-semibold text-gray-700 text-right">Duration</th>
              </tr>
            </thead>
            <tbody>
              <% tracks.forEach(function(track, index) { %>
                <%
                  const minutes = Math.floor(track.duration_ms / 60000);
                  const seconds = Math.floor((track.duration_ms % 60000) / 1000);
                  const duration = `${minutes}:${seconds.toString().padStart(2, '0')}`;
                %>
                <tr class="border-b border-gray-100 hover:bg-gray-50 transition">
                  <td class="py-3 px-4 text-sm text-gray-600">
                    <%= track.track_number || index + 1 %>
                  </td>
                  <td class="py-3 px-4">
                    <a href="/track/<%= track.id %>" class="text-blue-600 hover:underline font-medium">
                      <%= track.name %>
                    </a>
                    <% if (track.explicit) { %>
                      <span class="ml-2 text-xs bg-gray-200 px-2 py-1 rounded">E</span>
                    <% } %>
                  </td>
                  <td class="py-3 px-4 text-sm text-gray-600 hidden md:table-cell">
                    <%= track.artist_name || 'Unknown Artist' %>
                  </td>
                  <td class="py-3 px-4 text-sm text-gray-600 text-right"><%= duration %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </main>

  <footer class="text-center text-gray-500 text-sm p-4 mt-8">
    <p>Spotify Sync PRO | <a href="/" class="text-blue-500 hover:underline">Dashboard</a></p>
  </footer>
</body>
</html>
