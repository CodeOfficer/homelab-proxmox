<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Spotify Sync - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-green-600 text-white p-4 shadow-lg">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">ðŸŽµ Spotify Sync</h1>
      <% if (authenticated) { %>
        <a href="/auth/logout" class="bg-white text-green-600 px-4 py-2 rounded hover:bg-gray-100 transition">
          Logout
        </a>
      <% } %>
    </div>
  </nav>

  <!-- Toast Container -->
  <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <main class="container mx-auto p-8">

    <!-- Not Authenticated -->
    <% if (!authenticated) { %>
      <div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl mx-auto text-center">
        <div class="mb-6">
          <svg class="w-24 h-24 mx-auto text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Connect Your Spotify Account</h2>
        <p class="text-gray-600 mb-8">Sync your playlists and tracks to query them offline via Claude Desktop.</p>
        <a href="/auth/spotify" class="inline-block bg-green-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-green-700 transition shadow-lg">
          Connect with Spotify
        </a>
      </div>
    <% } else { %>
      <!-- Authenticated -->
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
        <!-- Sync Control -->
        <div class="lg:col-span-3">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Sync Control</h2>
            <button
              onclick="triggerSync()"
              class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition shadow"
            >
              ðŸ”„ Trigger Sync
            </button>
            <p class="text-gray-600 text-sm mt-2">Manually sync your Spotify playlists and tracks.</p>
          </div>
        </div>

        <!-- Playlists -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4">
              Playlists
              <span class="text-sm font-normal text-gray-500">(<%= playlists.length %>)</span>
            </h2>
            <% if (playlists.length === 0) { %>
              <p class="text-gray-500 italic">No playlists synced yet. Click "Trigger Sync" to fetch your playlists.</p>
            <% } else { %>
              <ul class="divide-y divide-gray-200">
                <% playlists.slice(0, 10).forEach(function(playlist) { %>
                  <li class="py-3">
                    <div class="flex justify-between items-center">
                      <div>
                        <h3 class="font-semibold text-gray-800"><%= playlist.name %></h3>
                        <% if (playlist.description) { %>
                          <p class="text-sm text-gray-500"><%= playlist.description %></p>
                        <% } %>
                      </div>
                      <span class="text-sm text-gray-500"><%= playlist.track_count || 0 %> tracks</span>
                    </div>
                  </li>
                <% }); %>
              </ul>
              <% if (playlists.length > 10) { %>
                <p class="text-sm text-gray-500 mt-4 text-center">
                  Showing 10 of <%= playlists.length %> playlists
                </p>
              <% } %>
            <% } %>
          </div>
        </div>

        <!-- Recent Syncs -->
        <div class="lg:col-span-1">
          <div class="bg-white rounded-lg shadow p-6">
            <h2 class="text-xl font-bold text-gray-800 mb-4">Recent Syncs</h2>
            <% if (recentSyncs.length === 0) { %>
              <p class="text-gray-500 italic text-sm">No sync history yet.</p>
            <% } else { %>
              <ul class="space-y-3">
                <% recentSyncs.forEach(function(sync) { %>
                  <li class="text-sm">
                    <div class="flex items-center justify-between mb-1">
                      <span class="<%= sync.status === 'success' ? 'text-green-600' : sync.status === 'failed' ? 'text-red-600' : 'text-yellow-600' %> font-semibold">
                        <%= sync.status === 'success' ? 'âœ“' : sync.status === 'failed' ? 'âœ—' : 'â‹¯' %>
                        <%= sync.status %>
                      </span>
                      <span class="text-gray-500 text-xs"><%= new Date(sync.started_at).toLocaleString() %></span>
                    </div>
                    <% if (sync.items_synced) { %>
                      <p class="text-gray-600"><%= sync.items_synced %> items synced</p>
                    <% } %>
                  </li>
                <% }); %>
              </ul>
            <% } %>
          </div>
        </div>
      </div>

      <!-- MCP Server Info -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h2 class="text-lg font-bold text-blue-900 mb-2">ðŸ¤– MCP Server Ready</h2>
        <p class="text-blue-800 mb-2">Your playlists are available via Claude Desktop!</p>
        <p class="text-sm text-blue-700">
          Configure Claude Desktop to use: <code class="bg-blue-100 px-2 py-1 rounded">https://spotify-mcp.codeofficer.com/sse</code>
        </p>
      </div>
    <% } %>
  </main>

  <footer class="text-center text-gray-500 text-sm p-4 mt-8">
    <p>Spotify Sync + MCP Server | <a href="/health" class="text-blue-500 hover:underline">Health Check</a></p>
  </footer>

  <script>
    // Toast notification system
    function showToast(message, type = 'info', duration = 4000) {
      const toast = document.createElement('div');
      const colors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        info: 'bg-blue-500',
        warning: 'bg-yellow-500'
      };

      toast.className = `${colors[type] || colors.info} text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3 transform transition-all duration-300 translate-x-full`;
      toast.innerHTML = `
        <span>${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-2 text-white hover:text-gray-200">âœ•</button>
      `;

      document.getElementById('toast-container').appendChild(toast);

      // Slide in
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto-remove
      if (duration > 0) {
        setTimeout(() => {
          toast.classList.add('translate-x-full');
          setTimeout(() => toast.remove(), 300);
        }, duration);
      }
    }

    // Check URL params for success/error messages
    (function() {
      const params = new URLSearchParams(window.location.search);
      const error = params.get('error');
      const success = params.get('success');

      if (error) {
        const messages = {
          'access_denied': 'Authentication was cancelled',
          'missing_code': 'Authentication failed: missing code',
          'token_exchange_failed': 'Failed to exchange token with Spotify',
          'callback_failed': 'Authentication callback failed'
        };
        showToast(messages[error] || error, 'error');
        // Clean URL
        window.history.replaceState({}, '', window.location.pathname);
      }

      if (success) {
        const messages = {
          'authenticated': 'Successfully connected to Spotify!',
          'logged_out': 'Logged out successfully'
        };
        showToast(messages[success] || success, 'success');
        // Clean URL
        window.history.replaceState({}, '', window.location.pathname);
      }
    })();

    async function triggerSync() {
      const button = event.target;
      button.disabled = true;
      button.textContent = 'â³ Syncing...';

      try {
        const response = await fetch('/sync/trigger', { method: 'POST' });
        const data = await response.json();

        if (response.ok) {
          showToast('Sync job created! Page will refresh to show progress.', 'success');
          setTimeout(() => location.reload(), 1500);
        } else {
          showToast('Failed to trigger sync: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = 'ðŸ”„ Trigger Sync';
        }
      } catch (error) {
        showToast('Network error: ' + error.message, 'error');
        button.disabled = false;
        button.textContent = 'ðŸ”„ Trigger Sync';
      }
    }

    // Auto-refresh if there's a running sync
    (function() {
      <% if (authenticated && recentSyncs.length > 0) { %>
        const latestSync = <%- JSON.stringify(recentSyncs[0]) %>;
        if (latestSync.status === 'running') {
          console.log('Sync in progress... will auto-refresh in 5 seconds');
          setTimeout(() => {
            location.reload();
          }, 5000);
        }
      <% } %>
    })();
  </script>
</body>
</html>
