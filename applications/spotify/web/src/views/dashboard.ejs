<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Spotify Sync PRO - Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-green-600 text-white p-4 shadow-lg">
    <div class="container mx-auto flex justify-between items-center">
      <h1 class="text-2xl font-bold">üéµ Spotify Sync PRO</h1>
      <% if (authenticated) { %>
        <div class="flex gap-4 items-center">
          <a href="/search" class="hover:underline">Search</a>
          <a href="/playlists" class="hover:underline">All Playlists</a>
          <a href="/auth/logout" class="bg-white text-green-600 px-4 py-2 rounded hover:bg-gray-100 transition">
            Logout
          </a>
        </div>
      <% } %>
    </div>
  </nav>

  <!-- Toast Container -->
  <div id="toast-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <main class="container mx-auto p-8">

    <!-- Not Authenticated -->
    <% if (!authenticated) { %>
      <div class="bg-white rounded-lg shadow-lg p-8 max-w-2xl mx-auto text-center">
        <div class="mb-6">
          <svg class="w-24 h-24 mx-auto text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
          </svg>
        </div>
        <h2 class="text-3xl font-bold text-gray-800 mb-4">Connect Your Spotify Account</h2>
        <p class="text-gray-600 mb-8">Sync your playlists, tracks, and audio features to build a powerful music library.</p>
        <a href="/auth/spotify" class="inline-block bg-green-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-green-700 transition shadow-lg">
          Connect with Spotify
        </a>
      </div>
    <% } else { %>
      <!-- Authenticated -->

      <!-- Library Stats -->
      <% if (stats.totalTracks > 0) { %>
        <div class="bg-white rounded-lg shadow p-6 mb-6">
          <h2 class="text-xl font-bold text-gray-800 mb-4">Library Overview</h2>

          <!-- Stats Grid -->
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
            <div class="bg-green-50 rounded-lg p-4 text-center">
              <div class="text-3xl font-bold text-green-700"><%= stats.totalTracks.toLocaleString() %></div>
              <div class="text-sm text-green-600">Tracks</div>
            </div>
            <div class="bg-blue-50 rounded-lg p-4 text-center">
              <div class="text-3xl font-bold text-blue-700"><%= stats.totalPlaylists.toLocaleString() %></div>
              <div class="text-sm text-blue-600">Playlists</div>
            </div>
            <div class="bg-purple-50 rounded-lg p-4 text-center">
              <div class="text-3xl font-bold text-purple-700"><%= stats.totalArtists.toLocaleString() %></div>
              <div class="text-sm text-purple-600">Artists</div>
            </div>
            <div class="bg-orange-50 rounded-lg p-4 text-center">
              <div class="text-3xl font-bold text-orange-700"><%= stats.totalAlbums.toLocaleString() %></div>
              <div class="text-sm text-orange-600">Albums</div>
            </div>
          </div>

          <!-- Secondary Stats -->
          <div class="flex flex-wrap gap-4 text-sm text-gray-600 border-t pt-4">
            <div>
              <span class="font-semibold"><%= totalDuration.hours %></span>h
              <span class="font-semibold"><%= totalDuration.minutes %></span>m total listening time
            </div>
            <% if (stats.tracksWithAudioFeatures > 0) { %>
              <div>
                <span class="font-semibold"><%= stats.tracksWithAudioFeatures.toLocaleString() %></span> tracks with audio features
              </div>
            <% } %>
            <% if (lastSync) { %>
              <div>
                Last sync: <span class="font-semibold"><%= new Date(lastSync).toLocaleString() %></span>
              </div>
            <% } %>
          </div>
        </div>

        <!-- Top Genres & Popular Tracks Row -->
        <div class="grid md:grid-cols-2 gap-6 mb-6">
          <!-- Top Genres -->
          <% if (topGenres.length > 0) { %>
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-bold text-gray-800 mb-3">Top Genres</h3>
              <div class="flex flex-wrap gap-2">
                <% topGenres.forEach(function(g, i) { %>
                  <%
                    const colors = [
                      'bg-red-100 text-red-800',
                      'bg-orange-100 text-orange-800',
                      'bg-yellow-100 text-yellow-800',
                      'bg-green-100 text-green-800',
                      'bg-blue-100 text-blue-800',
                      'bg-indigo-100 text-indigo-800',
                      'bg-purple-100 text-purple-800',
                      'bg-pink-100 text-pink-800'
                    ];
                    const color = colors[i % colors.length];
                  %>
                  <a href="/search?q=<%= encodeURIComponent(g.genre) %>&filter=genre" class="<%= color %> px-3 py-1 rounded-full text-sm font-medium hover:opacity-80 transition">
                    <%= g.genre %> (<%= g.count %>)
                  </a>
                <% }); %>
              </div>
            </div>
          <% } %>

          <!-- Most Popular Tracks -->
          <% if (popularTracks.length > 0) { %>
            <div class="bg-white rounded-lg shadow p-6">
              <h3 class="text-lg font-bold text-gray-800 mb-3">Most Popular</h3>
              <ul class="space-y-2">
                <% popularTracks.forEach(function(track, i) { %>
                  <li class="flex items-center gap-3">
                    <span class="text-gray-400 text-sm w-4"><%= i + 1 %></span>
                    <a href="/track/<%= track.id %>" class="flex-1 truncate hover:text-green-600">
                      <span class="font-medium"><%= track.name %></span>
                      <span class="text-gray-500 text-sm"> - <%= track.artist_name || 'Unknown' %></span>
                    </a>
                    <span class="text-xs text-gray-400" title="Spotify Popularity"><%= track.popularity %></span>
                  </li>
                <% }); %>
              </ul>
            </div>
          <% } %>
        </div>
      <% } %>

      <!-- Sync Progress Card (hidden by default, shows when sync is running) -->
      <div id="sync-progress-card" class="hidden bg-blue-50 border-2 border-blue-400 rounded-lg p-6 mb-6">
        <h2 class="text-xl font-bold text-blue-900 mb-4">‚è≥ Sync in Progress</h2>
        <div class="space-y-4">
          <div>
            <div class="flex justify-between text-sm mb-1">
              <span id="progress-label" class="text-blue-800">Syncing data...</span>
              <span id="progress-percent" class="text-blue-900 font-semibold">0%</span>
            </div>
            <div class="w-full bg-gray-300 rounded-full h-4">
              <div id="progress-bar" class="bg-blue-600 h-4 rounded-full transition-all duration-300" style="width: 0%"></div>
            </div>
          </div>
          <div class="text-sm text-gray-700 flex justify-between">
            <div>
              <p>Elapsed: <span id="elapsed-time" class="font-semibold">0s</span></p>
              <p>ETA: <span id="eta-time" class="font-semibold">Calculating...</span></p>
            </div>
            <div id="timeout-warning" class="hidden text-red-600 text-xs">
              ‚ö† Sync running >1hr (may be stuck)
            </div>
          </div>
          <div id="steps-detail" class="text-xs space-y-1 text-gray-600 border-t border-blue-200 pt-3"></div>
        </div>
      </div>

      <!-- Sync Control -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Sync Control</h2>
        <button
          id="trigger-sync-btn"
          onclick="triggerSync()"
          class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition shadow disabled:bg-gray-400 disabled:cursor-not-allowed"
        >
          üîÑ Trigger Full Sync
        </button>
        <p class="text-gray-600 text-sm mt-2">
          Sync playlists, tracks, artists, genres, and audio features (tempo, energy, mood).
        </p>
      </div>

      <!-- Search Bar -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Search Your Library</h2>
        <form action="/search" method="GET" class="flex gap-2">
          <input
            type="text"
            name="q"
            placeholder="Search tracks, artists, playlists..."
            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <select name="filter" class="px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500">
            <option value="all">All</option>
            <option value="tracks">Tracks</option>
            <option value="artists">Artists</option>
            <option value="playlists">Playlists</option>
            <option value="genre">Genre</option>
          </select>
          <button type="submit" class="bg-green-600 text-white px-6 py-2 rounded-lg hover:bg-green-700 transition">
            Search
          </button>
        </form>
      </div>

      <!-- Playlists Grid (clickable) -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">
          Your Playlists
          <span class="text-sm font-normal text-gray-500">(<%= playlists.length %>)</span>
        </h2>
        <% if (playlists.length === 0) { %>
          <p class="text-gray-500 italic">No playlists synced yet. Trigger a sync to fetch your library.</p>
        <% } else { %>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
            <% playlists.slice(0, 12).forEach(function(playlist) { %>
              <a href="/playlist/<%= playlist.id %>" class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:shadow-md transition cursor-pointer">
                <% if (playlist.image_url) { %>
                  <img src="<%= playlist.image_url %>" alt="<%= playlist.name %>" class="w-full h-32 object-cover rounded mb-2">
                <% } else { %>
                  <div class="w-full h-32 bg-gray-300 rounded mb-2 flex items-center justify-center text-gray-500 text-3xl">
                    üéµ
                  </div>
                <% } %>
                <h3 class="font-semibold text-gray-800 truncate" title="<%= playlist.name %>"><%= playlist.name %></h3>
                <p class="text-sm text-gray-500"><%= playlist.track_count || 0 %> tracks</p>
              </a>
            <% }); %>
          </div>
          <% if (playlists.length > 12) { %>
            <p class="text-sm text-gray-500 mt-4 text-center">
              <a href="/playlists" class="text-blue-600 hover:underline">View all <%= playlists.length %> playlists ‚Üí</a>
            </p>
          <% } %>
        <% } %>
      </div>

      <!-- Recent Syncs -->
      <div class="bg-white rounded-lg shadow p-6 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Recent Syncs</h2>
        <% if (recentSyncs.length === 0) { %>
          <p class="text-gray-500 italic text-sm">No sync history yet.</p>
        <% } else { %>
          <ul class="space-y-3">
            <% recentSyncs.slice(0, 5).forEach(function(sync) { %>
              <li class="text-sm border-b border-gray-100 pb-2">
                <div class="flex items-center justify-between mb-1">
                  <span class="<%= sync.status === 'success' ? 'text-green-600' : sync.status === 'failed' ? 'text-red-600' : 'text-yellow-600' %> font-semibold">
                    <%= sync.status === 'success' ? '‚úì' : sync.status === 'failed' ? '‚úó' : '‚ãØ' %>
                    <%= sync.status %>
                  </span>
                  <span class="text-gray-500 text-xs"><%= new Date(sync.started_at).toLocaleString() %></span>
                </div>
                <% if (sync.items_synced) { %>
                  <p class="text-gray-600"><%= sync.items_synced %> items synced</p>
                <% } %>
                <% if (sync.error) { %>
                  <p class="text-red-600 text-xs mt-1"><%= sync.error %></p>
                <% } %>
              </li>
            <% }); %>
          </ul>
        <% } %>
      </div>

      <!-- MCP Server Info -->
      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <h2 class="text-lg font-bold text-blue-900 mb-2">ü§ñ MCP Server Ready</h2>
        <p class="text-blue-800 mb-2">Your music library is available via Claude Desktop!</p>
        <p class="text-sm text-blue-700">
          Configure Claude Desktop to use: <code class="bg-blue-100 px-2 py-1 rounded font-mono text-xs">https://spotify-mcp.codeofficer.com/sse</code>
        </p>
      </div>
    <% } %>
  </main>

  <footer class="text-center text-gray-500 text-sm p-4 mt-8">
    <p>Spotify Sync PRO | <a href="/health" class="text-blue-500 hover:underline">Health</a> | <a href="/test-audio-features" class="text-blue-500 hover:underline">Test Audio Features</a></p>
  </footer>

  <script>
    // Toast notification system
    function showToast(message, type = 'info', duration = 4000) {
      const toast = document.createElement('div');
      const colors = {
        success: 'bg-green-500',
        error: 'bg-red-500',
        info: 'bg-blue-500',
        warning: 'bg-yellow-500'
      };

      toast.className = `${colors[type] || colors.info} text-white px-6 py-4 rounded-lg shadow-lg flex items-center gap-3 transform transition-all duration-300 translate-x-full`;
      toast.innerHTML = `
        <span>${message}</span>
        <button onclick="this.parentElement.remove()" class="ml-2 text-white hover:text-gray-200">‚úï</button>
      `;

      document.getElementById('toast-container').appendChild(toast);

      // Slide in
      setTimeout(() => {
        toast.classList.remove('translate-x-full');
      }, 10);

      // Auto-remove
      if (duration > 0) {
        setTimeout(() => {
          toast.classList.add('translate-x-full');
          setTimeout(() => toast.remove(), 300);
        }, duration);
      }
    }

    // Check URL params for success/error messages
    (function() {
      const params = new URLSearchParams(window.location.search);
      const error = params.get('error');
      const success = params.get('success');

      if (error) {
        const messages = {
          'access_denied': 'Authentication was cancelled',
          'missing_code': 'Authentication failed: missing code',
          'token_exchange_failed': 'Failed to exchange token with Spotify',
          'callback_failed': 'Authentication callback failed'
        };
        showToast('‚ùå ' + (messages[error] || error), 'error');
        window.history.replaceState({}, '', window.location.pathname);
      }

      if (success) {
        const messages = {
          'authenticated': 'Successfully connected to Spotify!',
          'logged_out': 'Logged out successfully'
        };
        showToast('‚úì ' + (messages[success] || success), 'success');
        window.history.replaceState({}, '', window.location.pathname);
      }
    })();

    // Progress polling (runs every 2 seconds when sync is active)
    let progressInterval = null;

    async function pollProgress() {
      try {
        const response = await fetch('/api/sync/progress');
        const data = await response.json();

        if (data.running) {
          // Show progress card
          document.getElementById('sync-progress-card').classList.remove('hidden');
          document.getElementById('trigger-sync-btn').disabled = true;

          // Update progress bar
          document.getElementById('progress-percent').textContent = `${data.progress_percent}%`;
          document.getElementById('progress-bar').style.width = `${data.progress_percent}%`;
          document.getElementById('elapsed-time').textContent = `${data.elapsed_seconds}s`;

          // Update ETA
          if (data.eta_seconds) {
            const minutes = Math.floor(data.eta_seconds / 60);
            const seconds = data.eta_seconds % 60;
            document.getElementById('eta-time').textContent = minutes > 0
              ? `${minutes}m ${seconds}s`
              : `${seconds}s`;
          } else {
            document.getElementById('eta-time').textContent = 'Calculating...';
          }

          // Show timeout warning if >1 hour
          if (data.timeout_warning) {
            document.getElementById('timeout-warning').classList.remove('hidden');
          }

          // Update step details
          let stepsHtml = '';
          if (data.steps && data.steps.length > 0) {
            data.steps.forEach(step => {
              const status = step.completed ? '‚úì' : '‚ãØ';
              const color = step.completed ? 'text-green-600' : 'text-blue-600';
              stepsHtml += `<p class="${color}">${status} <span class="capitalize">${step.step}</span>: ${step.processed_items}/${step.total_items} (${step.progress_percent}%)</p>`;
            });
          }
          document.getElementById('steps-detail').innerHTML = stepsHtml;

        } else {
          // Sync complete or not running
          const wasRunning = !document.getElementById('sync-progress-card').classList.contains('hidden');

          if (wasRunning) {
            // Sync just finished
            showToast('‚úì Sync complete!', 'success');
            setTimeout(() => location.reload(), 1500);
          }

          document.getElementById('sync-progress-card').classList.add('hidden');
          document.getElementById('trigger-sync-btn').disabled = false;

          if (progressInterval) {
            clearInterval(progressInterval);
            progressInterval = null;
          }
        }
      } catch (error) {
        console.error('Error polling progress:', error);
      }
    }

    // Start polling on page load
    document.addEventListener('DOMContentLoaded', () => {
      pollProgress(); // Check immediately
      progressInterval = setInterval(pollProgress, 2000); // Then every 2s
    });

    async function triggerSync() {
      const button = document.getElementById('trigger-sync-btn');
      button.disabled = true;
      button.textContent = '‚è≥ Starting...';

      try {
        const response = await fetch('/sync/trigger', { method: 'POST' });
        const data = await response.json();

        if (response.ok) {
          showToast('‚úì Sync started! Watch progress above.', 'success');
          // Progress polling will detect it
        } else {
          showToast('‚ùå Failed to start sync: ' + (data.error || 'Unknown error'), 'error');
          button.disabled = false;
          button.textContent = 'üîÑ Trigger Full Sync';
        }
      } catch (error) {
        showToast('‚ùå Network error: ' + error.message, 'error');
        button.disabled = false;
        button.textContent = 'üîÑ Trigger Full Sync';
      }
    }
  </script>
</body>
</html>
