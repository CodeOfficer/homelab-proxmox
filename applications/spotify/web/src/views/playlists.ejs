<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Playlists - Spotify Sync PRO</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-green-600 text-white p-4 shadow-lg">
    <div class="container mx-auto flex flex-wrap items-center justify-between gap-4">
      <a href="/" class="text-2xl font-bold hover:underline">üéµ Spotify Sync PRO</a>
      <div class="flex flex-wrap items-center gap-4 text-sm">
        <a href="/search" class="hover:underline">Search</a>
        <a href="/playlists" class="hover:underline font-semibold">Playlists</a>
        <a href="/tracks" class="hover:underline">Tracks</a>
        <a href="/artists" class="hover:underline">Artists</a>
        <a href="/genres" class="hover:underline">Genres</a>
        <a href="/auth/logout" class="bg-white text-green-600 px-3 py-1.5 rounded hover:bg-gray-100 transition">
          Logout
        </a>
      </div>
    </div>
  </nav>

  <main class="container mx-auto p-8">
    <!-- Header -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-4">
        <div>
          <h1 class="text-3xl font-bold text-gray-800">
            All Playlists
            <span class="text-lg font-normal text-gray-500">(<span id="total-count"><%= totalCount %></span> total)</span>
          </h1>
          <p class="text-gray-600 mt-2">Browse all your Spotify playlists</p>
        </div>
        <div class="flex flex-wrap gap-3 text-sm">
          <div class="bg-green-50 text-green-700 px-3 py-2 rounded-lg">
            <span class="font-semibold"><%= stats.totalTracks.toLocaleString() %></span> tracks
          </div>
          <div class="bg-blue-50 text-blue-700 px-3 py-2 rounded-lg">
            <span class="font-semibold"><%= stats.totalArtists.toLocaleString() %></span> artists
          </div>
        </div>
      </div>
      <form action="/playlists" method="GET" class="mt-4 flex flex-wrap gap-2">
        <input
          id="playlist-search"
          type="text"
          name="q"
          value="<%= query || '' %>"
          placeholder="Search playlists..."
          class="w-full md:w-96 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">
          Search
        </button>
      </form>
    </div>

    <!-- Playlists Grid -->
    <div class="bg-white rounded-lg shadow p-6 mb-6">
      <% if (playlists.length === 0) { %>
        <div class="text-center py-12">
          <div class="text-6xl mb-4">üéµ</div>
          <h2 class="text-2xl font-bold text-gray-800 mb-2">No Playlists Found</h2>
          <p class="text-gray-600 mb-4">Trigger a sync from the dashboard to fetch your library.</p>
          <a href="/" class="inline-block bg-green-600 text-white px-6 py-3 rounded-lg hover:bg-green-700 transition">
            Go to Dashboard
          </a>
        </div>
      <% } else { %>
        <div id="playlist-grid" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          <% playlists.forEach(function(playlist) { %>
            <a href="/playlist/<%= playlist.id %>" class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:shadow-md transition cursor-pointer">
              <% if (playlist.image_url) { %>
                <img src="<%= playlist.image_url %>" alt="<%= playlist.name %>" class="w-full h-32 object-cover rounded mb-2">
              <% } else { %>
                <%
                  const palette = ['bg-emerald-200 text-emerald-900','bg-amber-200 text-amber-900','bg-sky-200 text-sky-900','bg-rose-200 text-rose-900','bg-indigo-200 text-indigo-900','bg-lime-200 text-lime-900'];
                  const base = playlist.name || 'Playlist';
                  const initials = base.split(' ').filter(Boolean).slice(0, 2).map(word => word[0]).join('').toUpperCase();
                  const color = palette[(base.charCodeAt(0) || 0) % palette.length];
                %>
                <div class="w-full h-32 rounded mb-2 flex items-center justify-center text-3xl font-semibold <%= color %>">
                  <%= initials || 'PL' %>
                </div>
              <% } %>
              <h3 class="font-semibold text-gray-800 truncate" title="<%= playlist.name %>"><%= playlist.name %></h3>
              <p class="text-sm text-gray-500"><%= playlist.track_count || 0 %> tracks</p>
              <% if (playlist.owner_name) { %>
                <p class="text-xs text-gray-400 mt-1">by <%= playlist.owner_name %></p>
              <% } %>
              <% if (playlist.external_url) { %>
                <p class="text-xs text-green-700 mt-1">Open in Spotify ‚Üó</p>
              <% } %>
            </a>
          <% }); %>
        </div>

        <!-- Pagination -->
        <% if (totalPages > 1) { %>
          <div id="playlist-pagination" class="flex justify-center gap-2 mt-6">
            <% if (page > 1) { %>
              <a href="/playlists?page=<%= page - 1 %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">
                ‚Üê Previous
              </a>
            <% } %>

            <%
              const maxPageButtons = 10;
              const startPage = Math.max(1, page - Math.floor(maxPageButtons / 2));
              const endPage = Math.min(totalPages, startPage + maxPageButtons - 1);
            %>

            <% for (let i = startPage; i <= endPage; i++) { %>
              <a
                href="/playlists?page=<%= i %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>"
                class="px-4 py-2 <%= i === page ? 'bg-blue-600 text-white' : 'bg-gray-200' %> rounded hover:bg-gray-300 transition"
              >
                <%= i %>
              </a>
            <% } %>

            <% if (endPage < totalPages) { %>
              <span class="px-4 py-2 text-gray-500">...</span>
              <a
                href="/playlists?page=<%= totalPages %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>"
                class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition"
              >
                <%= totalPages %>
              </a>
            <% } %>

            <% if (page < totalPages) { %>
              <a href="/playlists?page=<%= page + 1 %><% if (query) { %>&q=<%= encodeURIComponent(query) %><% } %>" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">
                Next ‚Üí
              </a>
            <% } %>
          </div>

          <p id="playlist-page-label" class="text-center text-sm text-gray-500 mt-4">
            Page <%= page %> of <%= totalPages %>
          </p>
        <% } %>
      <% } %>
    </div>
  </main>

  <footer class="text-center text-gray-500 text-sm p-4 mt-8">
    <p>Spotify Sync PRO | <a href="/" class="text-blue-500 hover:underline">Dashboard</a></p>
  </footer>

  <script>
    const playlistSearch = document.getElementById('playlist-search');
    const playlistGrid = document.getElementById('playlist-grid');
    const playlistPagination = document.getElementById('playlist-pagination');
    const playlistPageLabel = document.getElementById('playlist-page-label');
    const totalCountEl = document.getElementById('total-count');
    let playlistTimer = null;

    function renderPlaylistCard(playlist) {
      const name = playlist.name || 'Playlist';
      const initials = name.split(' ').filter(Boolean).slice(0, 2).map(word => word[0]).join('').toUpperCase() || 'PL';
      const palette = ['bg-emerald-200 text-emerald-900','bg-amber-200 text-amber-900','bg-sky-200 text-sky-900','bg-rose-200 text-rose-900','bg-indigo-200 text-indigo-900','bg-lime-200 text-lime-900'];
      const color = palette[(name.charCodeAt(0) || 0) % palette.length];
      const image = playlist.image_url
        ? `<img src="${playlist.image_url}" alt="${name}" class="w-full h-32 object-cover rounded mb-2">`
        : `<div class="w-full h-32 rounded mb-2 flex items-center justify-center text-3xl font-semibold ${color}">${initials}</div>`;
      const owner = playlist.owner_name ? `<p class="text-xs text-gray-400 mt-1">by ${playlist.owner_name}</p>` : '';
      const external = playlist.external_url ? `<p class="text-xs text-green-700 mt-1">Open in Spotify ‚Üó</p>` : '';
      return `
        <a href="/playlist/${playlist.id}" class="block p-4 border border-gray-200 rounded-lg hover:bg-gray-50 hover:shadow-md transition cursor-pointer">
          ${image}
          <h3 class="font-semibold text-gray-800 truncate" title="${name}">${name}</h3>
          <p class="text-sm text-gray-500">${playlist.track_count || 0} tracks</p>
          ${owner}
          ${external}
        </a>
      `;
    }

    async function loadPlaylists(query, page = 1) {
      const response = await fetch(`/api/playlists?q=${encodeURIComponent(query)}&page=${page}`);
      const data = await response.json();
      if (totalCountEl) totalCountEl.textContent = data.totalCount;
      if (playlistGrid) {
        playlistGrid.innerHTML = data.items.map(renderPlaylistCard).join('');
      }
      if (!playlistPagination || !playlistPageLabel) return;

      if (data.totalPages > 1) {
        const links = [];
        if (data.page > 1) {
          links.push(`<a href="#" data-page="${data.page - 1}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">‚Üê Previous</a>`);
        }
        const maxButtons = 10;
        const startPage = Math.max(1, data.page - Math.floor(maxButtons / 2));
        const endPage = Math.min(data.totalPages, startPage + maxButtons - 1);
        for (let i = startPage; i <= endPage; i++) {
          const cls = i === data.page ? 'bg-blue-600 text-white' : 'bg-gray-200';
          links.push(`<a href="#" data-page="${i}" class="px-4 py-2 ${cls} rounded hover:bg-gray-300 transition">${i}</a>`);
        }
        if (endPage < data.totalPages) {
          links.push(`<span class="px-4 py-2 text-gray-500">...</span>`);
          links.push(`<a href="#" data-page="${data.totalPages}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">${data.totalPages}</a>`);
        }
        if (data.page < data.totalPages) {
          links.push(`<a href="#" data-page="${data.page + 1}" class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300 transition">Next ‚Üí</a>`);
        }
        playlistPagination.innerHTML = links.join('');
        playlistPageLabel.textContent = `Page ${data.page} of ${data.totalPages}`;
        playlistPagination.querySelectorAll('a[data-page]').forEach((link) => {
          link.addEventListener('click', (event) => {
            event.preventDefault();
            loadPlaylists(playlistSearch.value, Number(link.dataset.page));
          });
        });
      } else {
        playlistPagination.innerHTML = '';
        playlistPageLabel.textContent = '';
      }
    }

    if (playlistSearch) {
      playlistSearch.addEventListener('input', () => {
        clearTimeout(playlistTimer);
        playlistTimer = setTimeout(() => loadPlaylists(playlistSearch.value, 1), 300);
      });
    }
  </script>
</body>
</html>
