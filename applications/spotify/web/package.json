{
  "name": "spotify-web",
  "version": "1.0.0",
  "description": "Web UI for Spotify sync with OAuth and manual sync trigger",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "spotify",
    "oauth",
    "express",
    "web"
  ],
  "author": "homelab",
  "license": "MIT",
  "dependencies": {
    "@homelab/spotify-shared": "workspace:*",
    "@kubernetes/client-node": "^0.22.0",
    "@spotify/web-api-ts-sdk": "^1.2.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.10",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
