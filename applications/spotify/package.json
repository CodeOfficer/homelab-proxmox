{
  "name": "spotify-sync-pro",
  "version": "2.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.26.0",
  "scripts": {
    "dev": "concurrently -k -n api,ui -c cyan,magenta \"pnpm --filter @spotify/api dev\" \"pnpm --filter @spotify/ui dev\"",
    "dev:cert": "bash scripts/dev-cert.sh",
    "dev:local": "bash scripts/dev-local.sh",
    "dev:sync": "bash scripts/dev-sync.sh",
    "dev:sync:force": "SPOTIFY_SYNC_FORCE=1 bash scripts/dev-sync-local.sh",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:e2e": "pnpm --filter @spotify/ui test:e2e",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "concurrently": "9.2.1",
    "typescript": "5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild"]
  }
}
